<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/title_item"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/description_item"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_below="@+id/title_item"
        android:layout_alignStart="@+id/title_item" />

    <TextView
        android:id="@+id/favorute_item"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_below="@+id/description_item"
        android:layout_alignStart="@+id/description_item" />

    <Button
        android:id="@+id/list_item_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/title_item"
        android:text="@string/menu_button"/>

</RelativeLayout>