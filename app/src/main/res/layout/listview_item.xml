<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/title_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/title_text_black"
        android:textSize="@dimen/title_text_size"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="@dimen/menu_button_size"
        android:paddingRight="@dimen/menu_button_size"/>

    <TextView
        android:id="@+id/description_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_item"
        android:layout_alignStart="@+id/title_item"
        android:textStyle="italic"
        android:textColor="@color/description_text_grey"
        android:textSize="@dimen/description_text_size"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="@dimen/menu_button_size"
        android:paddingRight="@dimen/menu_button_size"/>

    <TextView
        android:id="@+id/favorite_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_item"
        android:layout_alignStart="@+id/description_item" />

    <Button
        android:id="@+id/list_item_menu_button"
        android:layout_width="@dimen/menu_button_size"
        android:layout_height="@dimen/menu_button_size"
        android:layout_alignEnd="@id/title_item"
        android:layout_alignRight="@id/title_item"
        android:text="@string/menu_button"
        />

</RelativeLayout>